{
	"$schema": "../aces.schema.json",
	
	"custom": {
		"conditions": [
			{
				"id": "is-large-number",
				"scriptName": "IsLargeNumber",
				"highlight": true,
				"params": [
					{
						"id": "number",
						"type": "number"
					}
				]
			},
			{
				"id": "on-model-created",
				"scriptName": "OnModelCreated",
				"isTrigger": true
			}
		],
		"actions": [
			{
				"id": "do-alert",
				"scriptName": "Alert",
				"highlight": true
			},
			{
				"id": "create-model",
				"scriptName": "CreateModel",
				"highlight": true,
				"params": [
					{
						"id": "model-path",
						"type": "string"
					}
				]
			},
			{
				"id": "play-animation",
				"scriptName": "PlayAnimation",
				"params": [
					{
						"id": "animation-name",
						"type": "string"
					},
					{
						"id": "loop",
						"type": "boolean"
					}
				]
			},
			{
				"id": "stop-animation",
				"scriptName": "StopAnimation"
			},
			{
				"id": "set-animation-speed",
				"scriptName": "SetAnimationSpeed",
				"params": [
					{
						"id": "speed",
						"type": "number"
					}
				]
			},
			{
				"id": "set-debug-rendering",
				"scriptName": "SetDebugRendering",
				"params": [
					{
						"id": "enabled",
						"type": "boolean"
					}
				]
			},
			{
				"id": "set-scale",
				"scriptName": "SetScale",
				"params": [
					{
						"id": "scale",
						"type": "number"
					}
				]
			},
			{
				"id": "set-sprite-visible",
				"scriptName": "SetSpriteVisible",
				"params": [
					{
						"id": "visible",
						"type": "boolean"
					}
				]
			},
			{
				"id": "set-position",
				"scriptName": "SetPosition",
				"params": [
					{
						"id": "x",
						"type": "number"
					},
					{
						"id": "y",
						"type": "number"
					},
					{
						"id": "z",
						"type": "number"
					}
				]
			},
			{
				"id": "set-rotation",
				"scriptName": "SetRotation",
				"params": [
					{
						"id": "x",
						"type": "number"
					},
					{
						"id": "y",
						"type": "number"
					},
					{
						"id": "z",
						"type": "number"
					},
					{
						"id": "order",
						"type": "combo",
						"items": [
							"XYZ",
							"XZY",
							"YXZ",
							"YZX",
							"ZXY",
							"ZYX"
						]
					}
				]
			},
			{
				"id": "enable-all-nodes",
				"scriptName": "EnableAllNodes"
			},
			{
				"id": "disable-all-nodes",
				"scriptName": "DisableAllNodes"
			},
			{
				"id": "enable-node",
				"scriptName": "EnableNode",
				"params": [
					{
						"id": "node-name",
						"type": "string"
					}
				]
			},
			{
				"id": "disable-node",
				"scriptName": "DisableNode",
				"params": [
					{
						"id": "node-name",
						"type": "string"
					}
				]
			}
		],
		"expressions": [
			{
				"id": "double",
				"expressionName": "Double",
				"highlight": true,
				"returnType": "number",
				"params": [
					{
						"id": "number",
						"type": "number"
					}
				]
			},
			{
				"id": "animation-speed",
				"expressionName": "AnimationSpeed",
				"returnType": "number"
			}
		]
	}
}